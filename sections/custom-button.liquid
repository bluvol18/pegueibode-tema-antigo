{%- style -%}
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
      padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
    }

    @media screen and (min-width: 750px) {
      .section-{{ section.id }}-padding {
        padding-top: {{ section.settings.padding_top }}px;
        padding-bottom: {{ section.settings.padding_bottom }}px;
      }
    }

    .customButton--link{
    }
{%- endstyle -%}
{{ 'section-custom-button.css' | asset_url | stylesheet_tag }}

<section
  id="CustomButton-{{ section.id }} "
  class="page-width section-{{ section.id }}-padding custom-button {{ section.settings.heading_alignment }}"
  data-section="{{ section.id }}"
>

<a class="customButton--link {% if product.metafields.custom.vendedor == blank %}metafield-empty {% endif %}" href="https://pegueibode.com.br/collections/all?filter.v.price.gte=&filter.v.price.lte=&filter.p.m.custom.vendedor={{ product.metafields.custom.vendedor }}">
        <button class="shopify-payment-button__button shopify-payment-button__button--unbranded"><span class="customButton--link--{{ section.settings.heading_capitalize }}">{{ section.settings.heading }}</span></button>
    </a>
</section>

{% schema %}
    {
      "name": "t:sections.custom-button.name",
      "class": "section",
      "tag": "section",
      "settings": [
        {
        "type": "paragraph",
        "content": "t:sections.custom-button.settings.paragraph__1.content"
        },
        {
        "type": "text",
        "id": "heading",
        "default": "Produtos recem vistos",
        "label": "t:sections.custom-button.settings.heading.label"
        },
        {
        "type": "select",
        "id": "heading_alignment",
        "options": [
            {
            "value": "left",
            "label": "t:sections.all.heading_alignment.options__1.label"
            },
            {
            "value": "center",
            "label": "t:sections.all.heading_alignment.options__2.label"
            },
            {
            "value": "right",
            "label": "t:sections.all.heading_alignment.options__3.label"
            }
        ],
        "default": "center",
        "label": "t:sections.all.heading_alignment.label"
        },
        {
        "type": "select",
        "id": "heading_capitalize",
        "options": [
            {
            "value": "normal",
            "label": "t:sections.all.heading_capitalize.options__1.label"
            },
            {
            "value": "uppercase",
            "label": "t:sections.all.heading_capitalize.options__2.label"
            }
        ],
        "default": "uppercase",
        "label": "t:sections.all.heading_capitalize.label"
        },
        {
        "type": "header",
        "content": "t:sections.all.padding.section_padding_heading"
        },
        {
        "type": "range",
        "id": "padding_top",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "t:sections.all.padding.padding_top",
        "default": 36
        },
        {
        "type": "range",
        "id": "padding_bottom",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "t:sections.all.padding.padding_bottom",
        "default": 36
        }
      ],
      "presets": [
        {"name":"Botão personalizável"}
      ]
}
{% endschema %}